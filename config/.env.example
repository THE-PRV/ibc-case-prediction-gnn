# Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# DATA PATHS
# =============================================================================

# Root directory for all data
DATA_DIR=./data

# Path to extracted JSON files from OCR/LLM extraction
EXTRACTED_JSON_PATH=./data/extracted_cases.json

# Path to raw NCLT judgments (PDFs)
RAW_DATA_PATH=./data/nclt_judgments

# Path to OCR output
OCR_OUTPUT_PATH=./data/ocroutput

# =============================================================================
# MODEL PATHS
# =============================================================================

# Directory for model outputs
MODEL_OUTPUT_DIR=./outputs

# Path to save/load pretrained model (3 features)
PRETRAINED_MODEL_PATH=./outputs/pretrained_dim3.pt

# Path to save/load final model (22 features)
FINAL_MODEL_PATH=./outputs/final_model.safetensors

# Fallback path if safetensors not available
FINAL_MODEL_PT_PATH=./outputs/final_model.pt

# Path to converted graph data
GRAPH_DATA_PATH=./data/ibc_graphs.pt

# Path to Physarum dataset for pretraining
PHYSARUM_DATA_PATH=./data/physarum_dataset_new_big.jsonl

# =============================================================================
# API KEYS (Only needed if using extraction features)
# =============================================================================

# OpenRouter API Key (for GPT-OSS extraction)
OPENROUTER_API_KEY=

# Optional: Other API keys if needed
# OPENAI_API_KEY=
# AZURE_API_KEY=

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================

# Random seed for reproducibility
SEED=42

# Device (cuda or cpu)
DEVICE=cuda

# Training hyperparameters
HIDDEN_DIM=128
NUM_GCN_LAYERS=3
DROPOUT=0.4
NUM_CLASSES=3

# Phase 1: Pretraining
PHASE1_EPOCHS=50
PHASE1_LR=0.001
PHASE1_BATCH_SIZE=32

# Phase 2: Fine-tuning
PHASE2_EPOCHS=100
PHASE2_LR=0.0005
PHASE2_BATCH_SIZE=32

# Optimization
WEIGHT_DECAY=0.0001
GRAD_CLIP=1.0

# Loss weights
EDGE_LOSS_WEIGHT=0.3
CLASS_LOSS_WEIGHT=1.0

# =============================================================================
# INFERENCE CONFIGURATION
# =============================================================================

# Default case index for what-if analysis
DEFAULT_CASE_INDEX=256

# Monte Carlo simulation parameters
MC_SAMPLES=5000
MC_SEED=42

# =============================================================================
# OCR PIPELINE CONFIGURATION
# =============================================================================

# Number of feeder workers for PDF processing
NUM_FEEDER_WORKERS=4

# Batch size for OCR
OCR_BATCH_SIZE=16

# DPI for PDF to image conversion
OCR_DPI=300

# JPEG quality for compression
JPEG_QUALITY=95

# =============================================================================
# SCRAPER CONFIGURATION
# =============================================================================

# IBBI website base URL
IBBI_BASE_URL=https://ibbi.gov.in/orders/nclt

# Page range for scraping
START_PAGE=689
END_PAGE=1478

# Download folder
DOWNLOAD_FOLDER=./data/nclt_judgments
